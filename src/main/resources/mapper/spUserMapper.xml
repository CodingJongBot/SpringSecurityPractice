<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jongbot.web.first.user.mapper">
    <!-- SELECT 쿼리 예시 -->
    <select id="selectById" parameterType="int" resultType="YourResultType">
        SELECT * FROM your_table WHERE id = #{id}
    </select>

    <!-- INSERT 쿼리 예시 -->
    <insert id="insertUser" parameterType="YourUserType">
        INSERT INTO your_table (column1, column2, ...) VALUES (#{property1}, #{property2}, ...)
    </insert>

    <!-- UPDATE 쿼리 예시 -->
    <update id="updateUser" parameterType="YourUserType">
        UPDATE your_table SET column1 = #{property1}, column2 = #{property2}, ... WHERE id = #{id}
    </update>

    <!-- DELETE 쿼리 예시 -->
    <delete id="deleteById" parameterType="int">
        DELETE FROM your_table WHERE id = #{id}
    </delete>
</mapper>
